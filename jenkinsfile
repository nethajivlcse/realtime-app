pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/nethajivlcse/realtime-app.git'
            }
        }

        stage('Build Project') {
            steps {
                sh './build.sh'   // Assuming build.sh is in your repo root
            }
        }

        stage('Run Tests') {
            steps {
                sh './test.sh'    // Assuming test.sh is in your repo root
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/*.log', allowEmptyArchive: true
        }
        success {
            echo 'Build & Tests Successful!'
        }
        failure {
            echo 'Build Failed!'
        }
    }
}

